<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous" />
  </head>
  <body>
    <div class="container">
      <h1>ShoPai Product List</h1>
      <% if(role === "Admin"){ %>
        <a href="/user/user-list"><button class="btn btn-primary">User List</button></a>
        <a href="/product/add"><button class="btn btn-success">Add New Product</button></a><br /><br />
      <% } %> 

      <form action="/user/product" method="get">
        <input type="text" name="search" class="form-control" style="width: 300px;"/><br>
        <button type="submit" class="btn btn-info">Search</button>
        <!-- <input type="submit" value="search"/> -->
      </form>
      <br /><br />
      <table class="table table-bordered">
        <tr>
          <th>No.</th>
          <th>Product Name</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Action</th>
        </tr>
        <% result.forEach((el, i) => {%>
        <tr>
          <td><%=i + 1%></td>
          <td><%=el.name%></td>
          <td><%=convertToRupiah(el.price)%></td>
          <td><%=el.stock%></td>
          <td><a href="/user/product/<%=el.id%>/detail">Product Detail</a></td>
        </tr>

        <%}) %>
      </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
  </body>
</html>
